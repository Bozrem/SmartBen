<AlarmDisplay>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            background_color: 0, 0, 0, 0 # Transparent
            size_hint: (1, 1)
            text: "Go to Alarm Screen" 
            on_release: app.root.current = 'alarm_screen'

<AlarmScreen>:
    BoxLayout: 
        canvas.before:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'

        BoxLayout: # Header bar at the top of selector half
            size_hint_y: .1
            orientation: 'horizontal'
            # Header with add button
            
            ImgBtn:
                size_hint_y: 1
                on_release: app.root.current = 'main'
                background_color: 0, 0, 0, 0
                id: back_icon
                source: 'assets/icons/control/back_light.png' 
            Label: 
                size_hint_x: .9
                text: "Next alarm in 3 hours 16 minutes"
                color: app.text_color
                font_size: app.small_font_size
                id: next_alarm_text
            ImgBtn:
                size_hint_y: 1
                on_release: root.add_alarm()
                background_color: 0, 0, 0, 0  # Transparent
                id: plus_icon
                source: 'assets/icons/control/add_light.png' 

        RecycleView:  # Scrolling selector
            id: alarm_list
            viewclass: 'AlarmItemWidget'
            size_hint_y: 0.9
            RecycleBoxLayout:
                default_size: None, dp(50)
                default_size_hint: 1, None
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                spacing: dp(10)  # Add spacing between items
                padding: dp(10)  # Add padding around the list


<AlarmItemWidget@BoxLayout>:
    orientation: 'horizontal'
    padding: 10
    spacing: 10
    Label:
        text: root.alarm_name
        size_hint_x: 0.25
        color: app.text_color
        font_size: app.small_font_size
    Label:
        text: root.alarm_time
        size_hint_x: 0.25
        color: app.text_color
        font_size: app.small_font_size
    # Letters total a .28 size hint x
    Label:
        text: "S"
        id: sunday
        font_size: app.small_font_size
        color: root.active_color if root.sunday_active else root.inactive_color
        size_hint_x: .04
    Label:
        text: "M"
        id: monday
        font_size: app.small_font_size
        color: root.active_color if root.monday_active else root.inactive_color
        size_hint_x: .04
    Label:
        text: "T"
        id: tuesday
        font_size: app.small_font_size
        color: root.active_color if root.tuesday_active else root.inactive_color
        size_hint_x: .04
    Label:
        text: "W"
        id: wednesday
        font_size: app.small_font_size
        color: root.active_color if root.wednesday_active else root.inactive_color
        size_hint_x: .04
    Label:
        text: "T"
        id: thursday
        font_size: app.small_font_size
        color: root.active_color if root.thursday_active else root.inactive_color
        size_hint_x: .04
    Label:
        text: "F"
        id: friday
        font_size: app.small_font_size
        color: root.active_color if root.friday_active else root.inactive_color
        size_hint_x: .04
    Label:
        text: "S"
        id: saturday
        font_size: app.small_font_size
        color: root.active_color if root.saturday_active else root.inactive_color
        size_hint_x: .04
    Switch:
        id: enabled
        size_hint_x: .1
        active: root.alarm_enabled  # Bind to the alarm_enabled property
        on_active: root.toggle_enabled(self.active)  # Call toggle_enabled when switch state changes
    Button:
        text: "Edit"
        size_hint_x: 0.1
        on_release: app.root.get_screen('alarm_screen').open_editor(self.parent.alarm_item)
        color: app.text_color
        font_size: app.small_font_size

<EditorPopup@Popup>:
    title: 'Loading Title'
    size_hint: 0.95, 0.9
    BoxLayout:
        orientation: 'horizontal'
        padding: 10
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            size_hint_x: .7
            # Time and other

            BoxLayout:
                # Time select
                orientation: 'horizontal'
                size_hint_y: .6
                padding: 20
                Button:
                    size_hint_x: .175
                    id: hour_ten
                    text: "0"
                    color: root.inactive_color
                    font_size: app.large_font_size
                    background_color: 0, 0, 0, 0
                    on_release: root.select_digit('hour_ten')
                Button:
                    size_hint_x: .175
                    id: hour_one
                    text: "7"
                    color: root.inactive_color
                    font_size: app.large_font_size
                    background_color: 0, 0, 0, 0
                    on_release: root.select_digit('hour_one')
                Label:
                    size_hint_x: .1
                    text: ":"
                    color: app.text_color
                    font_size: app.large_font_size
                    background_color: 0, 0, 0, 0
                Button:
                    size_hint_x: .175
                    id: minute_ten
                    text: "0"
                    color: root.inactive_color
                    font_size: app.large_font_size
                    background_color: 0, 0, 0, 0
                    on_release: root.select_digit('minute_ten')
                Button:
                    size_hint_x: .175
                    id: minute_one
                    text: "0"
                    color: root.inactive_color
                    font_size: app.large_font_size
                    background_color: 0, 0, 0, 0
                    on_release: root.select_digit('minute_one')
                BoxLayout:
                    # UP DOWN arrows
                    size_hint_x: .2
                    orientation: 'vertical'
                    ImgBtn:
                        size_hint_y: .5
                        on_release: root.change_digit(increment=True)
                        background_color: 0, 0, 0, 0
                        id: up_icon
                        source: 'assets/icons/control/up_light.png'
                    ImgBtn:
                        size_hint_y: .5
                        on_release: root.change_digit(increment=False)
                        background_color: 0, 0, 0, 0
                        id: down_icon
                        source: 'assets/icons/control/down_light.png'
            
            BoxLayout:
                orientation: 'horizontal'
                size_hint_y: .4
                # Media Selection

                BoxLayout:
                    orientation: 'vertical'
                    size_hint_x: .5
                    # Text and Switches
                    Label:
                        size_hint_y: .4
                        text: "Media Selected:\n"
                        id: media_selected_label
                        color: app.text_color
                        font_size: app.small_font_size
                    
                    BoxLayout:
                        orientation: 'horizontal'
                        size_hint_y: .6
                        # Switches for light and volume control
                        BoxLayout:
                            padding: 10
                            orientation: 'vertical'
                            size_hint_x: .45
                            # Volume Switch with Label
                            Label:
                                size_hint_y: .5
                                text: "Volume"
                                color: app.text_color
                                font_size: app.small_font_size
                            Switch:
                                size_hint_y: .5
                                id: volume_switch
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint_x: .1
                            # Making space because I'm too lazy to figure out how padding works for the switches
                        BoxLayout:
                            padding: 10
                            orientation: 'vertical'
                            size_hint_x: .45
                            # Light Switch with Label
                            Label:
                                size_hint_y: .5
                                text: "Light"
                                color: app.text_color
                                font_size: app.small_font_size
                            Switch:
                                size_hint_y: .5
                                id: light_switch
                        
                RecycleView:
                    id: media_list
                    viewclass: 'SelectableLabel'
                    size_hint_x: .5
                    RecycleBoxLayout:
                        default_size: None, dp(50)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        spacing: dp(10)  # Add spacing between items
                        padding: dp(10)  # Add padding around the list
                
        
        BoxLayout:
            # Repeat Switch, Day Buttons, Save Buttons
            size_hint_x: .3
            orientation: 'vertical'

            BoxLayout:
                size_hint_y: .115
                orientation:'horizontal'
                Label:
                    text: "Repeat"
                    color: app.text_color
                    font_size: app.small_font_size
                Switch:
                    id: repeat_switch
            Button:
                text: "Sunday"
                id: sunday_button
                size_hint_y: .11
                color: root.active_color if root.sunday_active else root.inactive_color
                font_size: app.small_font_size
                on_release: root.toggle_day('sunday_button')
            Button:
                text: "Monday"
                id: monday_button
                size_hint_y: .11
                color: root.active_color if root.monday_active else root.inactive_color
                font_size: app.small_font_size
                on_release: root.toggle_day('monday_button')
            Button:
                text: "Tuesday"
                id: tuesday_button
                size_hint_y: .11
                color: root.active_color if root.tuesday_active else root.inactive_color
                font_size: app.small_font_size
                on_release: root.toggle_day('tuesday_button')
            Button:
                text: "Wednesday"
                id: wednesday_button
                size_hint_y: .11
                color: root.active_color if root.wednesday_active else root.inactive_color
                font_size: app.small_font_size
                on_release: root.toggle_day('wednesday_button')
            Button:
                text: "Thursday"
                id: thursday_button
                size_hint_y: .11
                color: root.active_color if root.thursday_active else root.inactive_color
                font_size: app.small_font_size
                on_release: root.toggle_day('thursday_button')
            Button:
                text: "Friday"
                id: friday_button
                size_hint_y: .11
                color: root.active_color if root.friday_active else root.inactive_color
                font_size: app.small_font_size
                on_release: root.toggle_day('friday_button')
            Button:
                text: "Saturday"
                id: saturday_button
                size_hint_y: .11
                color: root.active_color if root.saturday_active else root.inactive_color
                font_size: app.small_font_size
                on_release: root.toggle_day('saturday_button')
            Button:
                text: 'Save Changes'
                size_hint_y: 0.115
                on_release: root.save_changes()
                color: app.text_color
                font_size: app.small_font_size


<ImgBtn>:
    size_hint: None, None
    size: 75, 75  # Adjust size as needed

<SelectableLabel@Button>:
    # Pass `self.text` to a method in the `EditorPopup` to update the selected media label
    on_release: app.root.get_screen('alarm_screen').popup.update_media_label(self.text)
    text: "Test"
    color: app.text_color
    font_size: app.small_font_size
    size_hint_y: None
    height: dp(50)