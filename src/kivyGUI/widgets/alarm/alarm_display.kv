<AlarmDisplay>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            background_color: 0, 0, 0, 0 # Transparent
            size_hint: (1, 1)
            text: "Go to Alarm Screen" 
            on_release: app.root.current = 'alarm_screen'

<AlarmScreen>:
    BoxLayout: # Split status bar from rest
        canvas.before:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        orientation: 'vertical'

        StatusBar:
            id: status_bar
            size_hint_y: .1

        BoxLayout: # Split down the middle between selector and editor
            orientation: 'horizontal'
            
            BoxLayout: # Left half: Alarm Selector
                orientation: 'vertical'
                size_hint_x: .6

                BoxLayout: # Header bar at the top of selector half
                    size_hint_y: .1
                    orientation: 'horizontal'
                    # Header with add button
                    Label: 
                        size_hint_x: .9
                        text: "Next alarm in 3 hours 16 minutes"
                    ImgBtn:
                        size_hint_y: 1
                        on_release: root.add_alarm()
                        background_color: 0, 0, 0, 0  # Transparent
                        id: plus_icon
                        source: 'assets/icons/control/add_light.png' 

                RecycleView:  # Scrolling selector
                    id: alarm_list
                    viewclass: 'AlarmItemWidget'
                    size_hint_y: 0.9
                    RecycleBoxLayout:
                        default_size: None, dp(70)
                        default_size_hint: 1, None
                        size_hint_y: None
                        height: self.minimum_height
                        orientation: 'vertical'
                        spacing: dp(10)  # Add spacing between items
                        padding: dp(10)  # Add padding around the list


            BoxLayout:  # Right half: Alarm editor
                padding: 15
                size_hint_x: .4
                orientation: 'vertical'
                Label:
                    text: 'Edit Alarm'
                    size_hint_y: None
                    height: dp(40)
                TextInput:
                    id: alarm_name
                    hint_text: 'Alarm Name'
                TextInput:
                    id: alarm_time
                    hint_text: 'Alarm Time'
                Switch:
                    id: alarm_repeat
                    active: False
                    text: 'Repeat'
                TextInput:
                    id: alarm_sound
                    hint_text: 'Alarm Sound'
                Button:
                    text: 'Save Alarm'
                    #on_release: root.save_alarm()

<AlarmItemWidget@BoxLayout>:
    orientation: 'horizontal'
    padding: 5
    Label:
        text: root.alarm_name
        size_hint_x: 0.5 
        color: app.text_color
        font_size: app.small_font_size
    Label:
        text: root.alarm_time
        size_hint_x: 0.3
        color: app.text_color
        font_size: app.small_font_size
    Button:
        text: "Edit"
        size_hint_x: 0.2
        on_release: root.load_alarm(self)
        color: app.text_color
        font_size: app.small_font_size

        
<ImgBtn>:
    size_hint: None, None
    size: 75, 75  # Adjust size as needed