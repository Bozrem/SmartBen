<MediaDisplay>:
    BoxLayout:
        canvas.before:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        Button:
            background_color: 0, 0, 0, 0 # Transparent
            size_hint: (1, 1)
            text: "Go to Media Screen"
            on_release: app.root.current = 'media_screen'

<MediaScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'This is the media screen'
        Button:
            text: 'Back to Main Screen'
            on_release: app.root.current = 'main'
