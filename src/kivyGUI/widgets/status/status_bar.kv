<StatusBar>:
    canvas.before:
        Color:
            rgba: app.background_color  # Adjust the alpha value for transparency
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    size_hint_y: 0.1

    StackLayout:
        id: left_box
        orientation: 'lr-tb'
        size_hint_x: 0.3

    BoxLayout:
        id: center_box
        orientation: 'horizontal'
        size_hint_x: 0.4

    StackLayout:
        id: right_box
        orientation: 'rl-tb'
        size_hint_x: 0.3

<VolumeWidget@ImgBtn>:
    size_hint: (.33, 1)
    on_release: app.show_volume_popup()
    background_color: 0, 0, 0, 0  # Transparent
    id: volume_icon
    source: 'assets/icons/volume/high_light.png' 

<BrightnessWidget@ImgBtn>:
    size_hint: (.33, 1)
    on_release: app.show_brightness_popup()
    background_color: 0, 0, 0, 0  # Transparent
    id: brightness_icon
    source: 'assets/icons/brightness/darkmode_light.png' 

<BluetoothWidget@ImgBtn>:
    size_hint: (.33, 1)
    # Add Bluetooth Menu
    background_color: 0, 0, 0, 0  # Transparent
    id: bluetooth_icon
    source: 'assets/icons/bluetooth/bluetooth_light.png'

<SettingsWidget@ImgBtn>:
    size_hint: (.33, 1)
    # Add Settings Screen
    background_color: 0, 0, 0, 0  # Transparent
    id: settings_icon
    source: 'assets/icons/settings/settings_light.png' 

<BackWidget@ImgBtn>:
    size_hint: (.33, 1)
    on_release: app.root.current = 'main'
    background_color: 0, 0, 0, 0  # Transparent
    id: back_icon
    source: 'assets/icons/control/back_light.png'