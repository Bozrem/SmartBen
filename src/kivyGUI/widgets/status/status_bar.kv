<StatusBar>:
    canvas.before:
        Color:
            rgba: app.background_color  # Adjust the alpha value for transparency
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    size_hint_y: 0.1

    StackLayout:
        id: left_box
        padding: 5
        orientation: 'lr-tb'
        size_hint_x: 0.25

    BoxLayout:
        id: center_box
        orientation: 'horizontal'
        size_hint_x: 0.5

    StackLayout:
        id: right_box
        padding: 5
        orientation: 'rl-tb'
        size_hint_x: 0.25

