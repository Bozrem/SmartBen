<StatusBar>:
    canvas.before:
        Color:
            rgba: app.background_color  # Adjust the alpha value for transparency
        Rectangle:
            pos: self.pos
            size: self.size
    orientation: 'horizontal'
    size_hint_y: 0.1

    StackLayout:
        id: left_box
        orientation: 'lr-tb'
        size_hint_x: 0.3

    BoxLayout:
        id: center_box
        orientation: 'horizontal'
        size_hint_x: 0.4

    StackLayout:
        id: right_box
        orientation: 'rl-tb'
        size_hint_x: 0.3

<VolumeWidget@Button>:
    size_hint_x: .33
    on_release: app.show_volume_popup()
    background_color: 0, 0, 0, 0  # Transparent
    Image:
        id: volume_icon
        source: 'assets/icons/volume/high_light.png' 
        size: self.parent.width-5, self.parent.height-5
        center: self.parent.center

<BrightnessWidget@Button>:
    size_hint_x: .33
    on_release: app.show_brightness_popup()
    background_color: 0, 0, 0, 0  # Transparent
    Image:
        id: brightness_icon
        source: 'assets/icons/brightness/darkmode_light.png' 
        size: self.parent.width-5, self.parent.height-5
        center: self.parent.center

<BluetoothWidget@Button>:
    size_hint_x: .33
    # Add Bluetooth Menu
    background_color: 0, 0, 0, 0  # Transparent
    Image:
        id: bluetooth_icon
        source: 'assets/icons/bluetooth/bluetooth_light.png' 
        size: self.parent.width-5, self.parent.height-5
        center: self.parent.center

<SettingsWidget@Button>:
    size_hint_x: .33
    # Add Settings Screen
    background_color: 0, 0, 0, 0  # Transparent
    Image:
        id: settings_icon
        source: 'assets/icons/settings/settings_light.png' 
        size: self.parent.width-5, self.parent.height-5
        center: self.parent.center

<BackWidget@Button>:
    size_hint_x: .33
    on_release: app.root.current = 'main'
    background_color: 0, 0, 0, 0  # Transparent
    Image:
        id: settings_icon
        source: 'assets/icons/control/back_light.png' 
        size: self.parent.width-5, self.parent.height-5
        center: self.parent.center

<WeatherWidget@Button>:
    background_color: 0, 0, 0, 0 # Transparent
    size_hint: (1, 1)
    text: "Weather: 69 and Sunny" # Placeholder
    on_release: app.root.current = 'weather_screen'
