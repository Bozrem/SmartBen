<TimeDisplay>:
    StackLayout:
        orientation: 'bt-lr'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: 0, 20/255, 50/255, 1  # Background color
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            id: date_label
            text: 'Loading'
            color: 200/255, 200/255, 200/255, 1
            font_size: '30sp'
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'

        Label:
            id: time_label
            text: 'Loading'
            color: 200/255, 200/255, 200/255, 1
            font_size: '120sp'
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'
