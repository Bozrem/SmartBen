<TimeDisplay>:
    StackLayout:
        orientation: 'bt-lr'
        padding: 20
        spacing: 10
        canvas.before:
            Color:
                rgba: app.background_color
            Rectangle:
                pos: self.pos
                size: self.size
        
        Label:
            id: date_label
            text: 'Loading'
            color: app.text_color
            font_size: app.medium_font_size
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'

        Label:
            id: time_label
            text: 'Loading'
            color: app.text_color
            font_size: app.large_font_size
            size_hint_y: None
            height: self.texture_size[1]
            halign: 'center'
