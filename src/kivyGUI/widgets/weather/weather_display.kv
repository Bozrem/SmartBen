<WeatherDisplay>:
    Button:
        size_hint: (1, 1)
        text: "Weather: 67 and Sunny"
        color: app.text_color
        font_size: app.medium_small_font_size
        on_release: app.root.current = 'weather_screen'
        background_color: 0, 0, 0, 0 # Transparent

<WeatherScreen>:
    BoxLayout:
        orientation: 'vertical'
        Label:
            text: 'This is the weather screen'
        Button:
            text: 'Back to Main Screen'
            on_release: app.root.current = 'main'
